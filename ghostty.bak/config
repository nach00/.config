keybind = alt+right=unbind

# CA+HEAI
# nvim focus
keybind = ctrl+alt+h=unbind
keybind = ctrl+alt+e=unbind
keybind = ctrl+alt+a=unbind
keybind = ctrl+alt+i=unbind

# CAS+HEAI
# nvim move
